  },
  "dependencies": {
    "envalid": "^6.0.2",
    "telegraf": "^4.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "ts-node-dev": "^1.1.1"
  }
}
